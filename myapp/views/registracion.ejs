                        <input type="email" name="email" value="" class="inputformulario"
                            onfocus="search()" placeholder="Email">
                        
                        
                        
                        <h4> Contrase√±a: <span class="obligrojo">*</span></h4>
                        <input type="password" name="password" value="" class="inputformulario"
                            onfocus="search()" placeholder="Contrasena">
                        
                        
        

                        <h4>Agrega foto de perfil <span class="obligrojo">*</span></h4>
                        <input class="form-input" type="file" name="fotoperfil"  class="boton1 inputformulario" 
                        onfocus="search()" placeholder="Foto de perfil" accept="image/png">
                        

                        <button class="boton1" type="submit"> Registrarse!</button>




                        </form>
                    </div>
                </div>
            </main>

            <%- include('./partials/footer') %>



    </body>



</html>